{
    "manifest_version": 3,
    "name": "__MSG_name__",
    "short_name": "QuartTools",
    "version": "2.7.9",
    "description": "__MSG_description__",
    "default_locale": "en",
    "author": "Quartyn",
    "homepage_url": "https://quartyn.com/tools/home",
    "icons": {
        "16": "/img/app/logo16.png",
        "32": "/img/app/logo32.png",
        "48": "/img/app/logo48.solid.png",
        "128": "/img/app/logo128.png"
    },
    "background": {
        "service_worker": "js/worker.js"
    },
    "commands": {
        "overlay.toggle": {
            "suggested_key": {
                "default": "Ctrl+Shift+Q",
                "mac": "Command+Shift+Q"
            },
            "description": "Toggle overlay"
        }
    },
    "action": {},
    "permissions": [ 
        "storage"
    ],
    "host_permissions": [
        "https://raw.githubusercontent.com/*",
        "https://api.quartyn.com/*",
        "https://extension-api.quartyn.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/js/init.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/js/content.js",
                "/js/overlay.js"
            ]
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/js/design.js"
            ],
            "css": [
                "/css/overlay.css"
            ],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "/js/app/youtube.v2.js"
            ],
            "css": [
                "/css/youtube.css"
            ],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": [
                "*://*.twitch.tv/*"
            ],
            "js": [
                "/js/app/twitch.js"
            ],
            "css": [
                "/css/twitch.css"
            ]
        },
        {
            "matches": [
                "*://*.instagram.com/*"
            ],
            "js": [
                "/js/app/instagram.js"
            ],
            "css": [
                "/css/instagram.css"
            ]
        }
    ],
    "web_accessible_resources": [{
        "resources": ["/*", "html/overlay.html"],
        "matches": ["<all_urls>"]
    }]
}